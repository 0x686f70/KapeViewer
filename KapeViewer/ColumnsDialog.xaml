<Window x:Class="KapeViewer.ColumnsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Column Visibility" Height="400" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListBox with checkboxes for columns -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <ListBox x:Name="ColumnsListBox" 
                     SelectionMode="Single"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding ColumnName}" 
                                  IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                  Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Select All" Width="80" Margin="0,0,5,0" Click="SelectAll_Click"/>
            <Button Content="Deselect All" Width="80" Margin="0,0,5,0" Click="DeselectAll_Click"/>
            <Button Content="OK" Width="80" Margin="0,0,5,0" IsDefault="True" Click="OK_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
